<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:clickable="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/detail_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/upload"
        android:elevation="4dp"
        android:src="@drawable/ic_icon_record_detail_upload_white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/share"
        android:elevation="4dp"
        android:src="@drawable/ic_icon_record_detail_share_white"
        app:layout_constraintRight_toLeftOf="@+id/upload"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />


    <ImageView
        android:id="@+id/download"
        android:elevation="4dp"
        android:src="@drawable/ic_icon_record_detail_download_white"
        app:layout_constraintRight_toLeftOf="@+id/share"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/type"
        android:elevation="4dp"
        android:src="@drawable/ic_icon_record_detail_type_white"
        app:layout_constraintRight_toLeftOf="@+id/download"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
