        <item name="android:activityOpenEnterAnimation">@anim/h_fragment_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/h_fragment_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/h_fragment_popenter</item>
        <item name="android:activityCloseExitAnimation">@anim/h_fragment_popexit</item>
